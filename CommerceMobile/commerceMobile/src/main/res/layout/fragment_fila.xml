<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.inf.commerce.multimobilegpa.PrincipalActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/id_fragment_fila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/id_lbl_title_fila"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/ic_multivarejo"
                    android:text="Dados do VeÃ­culo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50px"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/laranja" />

                <TextView
                    android:id="@+id/id_lbl_placa_fila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placa:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id_lbl_motorista_fila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motorista:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id_lbl_transportadora_fila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transportadora:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id_lbl_status_fila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Atual"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/laranja" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/id_lbl_posicao_fila"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/vermelho"
                    android:paddingBottom="25px"
                    android:paddingTop="25px"
                    android:text="Fila:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/branco"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/id_btn_entrada_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_entrar_fila" >
                </Button>

                <Button
                    android:id="@+id/id_btn_saida_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_sair_fila" >
                </Button>

                <Button
                    android:id="@+id/id_btn_informar_doca_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_informar_doca" >
                </Button>

                <Button
                    android:id="@+id/id_btn_atualizar_dados_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_atualizar_fila" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/id_btn_qtd_cargas_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_historico_carregamento" >
                </Button>

                <Button
                    android:id="@+id/id_btn_dados_carga_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_detalhe_carregamento" >
                </Button>

                <Button
                    android:id="@+id/id_btn_notificacao_online_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_notificacao" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/id_btn_informar_chegada_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_informar_chegada" >
                </Button>

                <Button
                    android:id="@+id/id_btn_ocorrencia_glog_online_fila"
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_button_ocorrencia_glog" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>