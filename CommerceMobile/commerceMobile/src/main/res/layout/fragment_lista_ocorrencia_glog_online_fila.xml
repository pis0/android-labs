<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.inf.commerce.multimobilegpa.PrincipalActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_lbl_title_ocorrencia_glog_online_fila"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_multivarejo"
                android:text="Ocorrências GLog"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/laranja" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/id_list_view_ocorrencia_glog_online_fila"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >
            </ListView>

            <TextView
                android:id="@+id/id_lbl_total_ocorrencia_glog_online_fila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: 0"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/id_btn_nova_solicitacao_ocorrencia_glog_online_fila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/laranja"
                android:drawablePadding="-45dp"
                android:text="Nova solicitação"
                android:textColor="@color/branco"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>