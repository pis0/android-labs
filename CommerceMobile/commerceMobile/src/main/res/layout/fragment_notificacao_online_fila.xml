<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.inf.commerce.multimobilegpa.PrincipalActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_lbl_title_fila"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_multivarejo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_ll_btn_filtro_notificacao_online_fila"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <RadioGroup
                android:id="@+id/id_rg_btn_notificacao_online_fila"
                android:layout_width="0dp"
                android:gravity="center"
                android:orientation="horizontal"                
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <RadioButton
                    android:id="@+id/id_rdo_nao_lida_notificacao_online_fila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="NÃ£o lidas" />

                <RadioButton
                    android:layout_marginLeft="25dp"
                    android:id="@+id/id_rdo_todas_notificacao_online_fila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todas" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/laranja" />

        <LinearLayout
            android:id="@+id/id_ll_btn_filtrar_notificacao_online_fila"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_btn_filtrar_notificacao_online_fila"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/laranja"
                android:drawablePadding="-45dp"
                android:text="Filtrar"
                android:textColor="@color/branco"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/laranja" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/id_list_view_notificacao_online_fila"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >
            </ListView>

            <TextView
                android:id="@+id/id_lbl_total_notificacao_online_fila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: 0"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>